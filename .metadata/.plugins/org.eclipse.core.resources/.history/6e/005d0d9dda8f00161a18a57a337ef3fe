package template;

import java.util.Random;

import logist.simulation.Vehicle;
import logist.agent.Agent;
import logist.behavior.ReactiveBehavior;
import logist.plan.Action;
import logist.plan.Action.Move;
import logist.plan.Action.Pickup;
import logist.task.Task;
import logist.task.TaskDistribution;
import logist.topology.Topology;
import logist.topology.Topology.City;
import uchicago.src.sim.analysis.Plot;

public class RandomTemplate implements ReactiveBehavior {

	private Random random;
	private double pPickup;
	private int numActions;
	private Agent myAgent;
	Plot aPlot;
	@Override
	public void setup(Topology topology, TaskDistribution td, Agent agent) {

		// Reads the discount factor from the agents.xml file.
		// If the property is not present it defaults to 0.95
		Double discount = agent.readProperty("discount-factor", Double.class,
				0.95);

		this.random = new Random();
		this.pPickup = discount;
		this.numActions = 0;
		this.myAgent = agent;

	}

	@Override
	public Action act(Vehicle vehicle, Task availableTask) {
		Action action;

		if (availableTask == null || random.nextDouble() > pPickup) {
			City currentCity = vehicle.getCurrentCity();
			City randomNeighbor = currentCity.randomNeighbor(random);
			if (availableTask != null) {
    			System.out.println(currentCity.name + ": TASK TO " + availableTask.deliveryCity + ". DENIED. MOVING TO " + randomNeighbor.name);
			} else {
				System.out.println(currentCity.name + ": NO TASKS. MOVING TO " + randomNeighbor.name);
			}
			action = new Move(randomNeighbor);
		} else {
			City currentCity = vehicle.getCurrentCity();	
			System.out.println(currentCity.name + ": TASK TO " + availableTask.deliveryCity + ". ACCEPTED.");
			action = new Pickup(availableTask);
		}
		
		if (numActions < 1) {
			aPlot = new Plot("Random Agent Average Profit");
			aPlot.setYRange(0, 50000);
			aPlot.setXRange(0, 1000);
			aPlot.display();
			aPlot.setConnected(true);
			
		}
		else {
			System.out.println("******The total profit after "+numActions+" actions is "+myAgent.getTotalProfit()+" (average profit: "+(myAgent.getTotalProfit() / (double)numActions)+")");
			aPlot.plotPoint(numActions,(myAgent.getTotalProfit() / (double)numActions), 4);
			aPlot.updateGraph();
		}
		numActions++;
		
		return action;
	}
}
